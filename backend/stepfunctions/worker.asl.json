{
  "Comment": "News summary worker (Fetch -> Summarize -> Store)",
  "StartAt": "FetchArticle",
  "States": {
    "FetchArticle": {
      "Type": "Task",
      "Resource": "${CollectorLambdaArn}",
      "TimeoutSeconds": 25,
      "Retry": [
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 2,
          "MaxAttempts": 2,
          "BackoffRate": 2.0
        }
      ],
      "Next": "Preprocess"
    },
    "Preprocess": {
      "Type": "Task",
      "Resource": "${PreprocessorLambdaArn}",
      "TimeoutSeconds": 25,
      "Retry": [
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 2,
          "MaxAttempts": 3,
          "BackoffRate": 2.0
        }
      ],
      "Next": "Summarize"
    },
    "Summarize": {
      "Type": "Task",
      "Resource": "${SummarizerLambdaArn}",
      "TimeoutSeconds": 120,
      "Retry": [
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 5,
          "MaxAttempts": 2,
          "BackoffRate": 2.0
        },
        {
          "ErrorEquals": ["ExternalServiceError"],
          "IntervalSeconds": 8,
          "MaxAttempts": 4,
          "BackoffRate": 2.0
        }
      ],
      "Next": "DiffValidate"
    },
    "DiffValidate": {
      "Type": "Task",
      "Resource": "${DiffValidatorLambdaArn}",
      "TimeoutSeconds": 20,
      "Retry": [
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 2,
          "MaxAttempts": 2,
          "BackoffRate": 2.0
        }
      ],
      "Next": "StoreSummary"
    },
    "StoreSummary": {
      "Type": "Task",
      "Resource": "${StoreLambdaArn}",
      "TimeoutSeconds": 20,
      "End": true
    }
  }
}
